<%- include("../partials/menu") %>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title><%= cliente && cliente._id ? "Atualizar Cliente" : "Cadastrar Cliente" %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2 class="mb-4">
      <%= cliente && cliente._id ? "Atualizar Cliente" : "Cadastro do Cliente" %>
    </h2>

    <% if (sucesso) { %>
      <div class="alert alert-success">Cliente cadastrado com sucesso!</div>
    <% } %>

    <% if (atualizado) { %>
      <div class="alert alert-success">Cliente atualizado com sucesso!</div>
    <% } %>

    <form action="/clientes/cadastrar" method="POST">
      <% if (cliente && cliente._id) { %>
        <input type="hidden" name="_id" value="<%= cliente._id %>">
      <% } %>

      <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" required value="<%= cliente?.nome || '' %>">
      </div>

      <div class="mb-3">
        <label for="cpf" class="form-label">CPF</label>
        <input type="text" class="form-control" id="cpf" name="cpf" required 
          value="<%= cliente?.cpf || '' %>" <%= cliente?._id ? "readonly" : "" %>>
      </div>

      <div class="mb-3">
        <label for="telefone" class="form-label">Telefone</label>
        <input type="text" class="form-control" id="telefone" name="telefone" 
          value="<%= cliente?.telefone || '' %>">
      </div>

      <button type="submit" class="btn btn-success">
        <%= cliente && cliente._id ? "Atualizar" : "Cadastrar" %>
      </button>
    </form>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>



