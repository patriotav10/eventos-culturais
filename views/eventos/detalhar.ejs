<%- include("../partials/menu") %>

<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Detalhes do Evento</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container mt-5">
    <h1 class="mb-4">Detalhes do Evento</h1>

    <% if (evento) { %>
      <ul class="list-group">
        <li class="list-group-item"><strong>Nome:</strong> <%= evento.nome %></li>
        <li class="list-group-item"><strong>Data:</strong> <%= evento.data %></li>
        <li class="list-group-item"><strong>Local:</strong> <%= evento.local %></li>
      </ul>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
