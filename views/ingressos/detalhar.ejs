<%- include("../partials/menu") %>

<!DOCTYPE html>
<html lang="pt-BR">

<head>

  <meta charset="UTF-8">
  <title>Detalhes do Ingresso</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  

  <div class="container mt-5">
    <h1 class="mb-4">Detalhes do Ingresso</h1>

    <% if (ingresso) { %>
      <ul class="list-group">
        <li class="list-group-item"><strong>Cliente:</strong> <%= ingresso.cliente.nome %></li>
        <li class="list-group-item"><strong>CPF:</strong> <%= ingresso.cliente.cpf %></li>
        <li class="list-group-item"><strong>Telefone:</strong> <%= ingresso.cliente.telefone %></li>
        <li class="list-group-item"><strong>Evento:</strong> <%= ingresso.evento.nome %></li>
        <li class="list-group-item"><strong>Data do Evento:</strong> <%= new Date(ingresso.evento.data).toLocaleDateString() %></li>
        <li class="list-group-item"><strong>Local do Evento:</strong> <%= ingresso.evento.local %></li>
        <li class="list-group-item"><strong>Valor:</strong> R$ <%= ingresso.valor.toFixed(2) %></li>
      </ul>
    <% }  %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
